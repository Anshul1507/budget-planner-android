<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:background="@drawable/ic_illustration_one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="25dp">



                <ImageView
                    android:id="@+id/back_arrow_button_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-6dp"
                    android:src="@drawable/ic_arrow_back_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="24dp"
                    android:text="Edit Profile"
                    android:textSize="28sp"
                    android:textStyle="bold" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <EditText
                            android:id="@+id/edittext_name_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textSize="20sp"
                            android:inputType="text"
                            android:singleLine="true" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text=" User name "
                        android:layout_marginLeft="15dp"
                        android:background="#ffffff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <EditText
                            android:id="@+id/edittext_phone_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textSize="20sp"
                            android:inputType="number"
                            android:singleLine="true" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text=" Contact no "
                        android:layout_marginLeft="15dp"
                        android:background="#ffffff"
                        android:textSize="18sp" />

                </RelativeLayout>



                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                         >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_border"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <EditText
                                android:id="@+id/edittext_password_edit_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:textSize="20sp"
                                android:inputType="textPassword"
                                android:singleLine="true" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text=" Password "
                            android:layout_marginLeft="15dp"
                            android:background="#ffffff"
                            android:textSize="18sp" />

                    </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/upi_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="44dp"
                    app:cardMaxElevation="6dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#2185AB"
                        android:padding="8dp"
                        android:text="Update Profile Image"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            app:cardMaxElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#2185AB"
                android:fontFamily="@font/montserrat"
                android:padding="6dp"
                android:text="Save Details"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>