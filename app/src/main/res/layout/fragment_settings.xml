<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Settings"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--for list item 1-->
        <LinearLayout
            android:id="@+id/setting_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/icon_setting_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_share" />

            <TextView
                android:id="@+id/text_setting_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"
                android:text="Share App"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/setting_layout_1"
            android:layout_margin="8dp"
            android:background="#bfbfbf" />

        <!--for list item 2-->
        <LinearLayout
            android:id="@+id/setting_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/icon_setting_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_feedback" />

            <TextView
                android:id="@+id/text_setting_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="Feedback"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/setting_layout_2"
            android:layout_margin="8dp"
            android:background="#bfbfbf" />

        <!--for list item 3-->
        <LinearLayout
            android:id="@+id/setting_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/icon_setting_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_about" />

            <TextView
                android:id="@+id/text_setting_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="About"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/setting_layout_3"
            android:layout_margin="8dp"
            android:background="#bfbfbf" />

        <!--for list item 4-->
        <LinearLayout
            android:id="@+id/setting_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/icon_setting_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_star" />

            <TextView
                android:id="@+id/text_setting_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="Rate on Google play"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/setting_layout_4"
            android:layout_margin="8dp"
            android:background="#bfbfbf" />

        <!--for list item 5-->
        <LinearLayout
            android:id="@+id/setting_layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/icon_setting_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_sign_out" />

            <TextView
                android:id="@+id/text_setting_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="Sign out"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/setting_layout_5"
            android:layout_margin="8dp"
            android:background="#bfbfbf" />
    </LinearLayout>
</ScrollView>